---
const { currentPage, item } = Astro.props;

const isCurrentPage = (item) => {
  if (item.link) {
    return currentPage.includes(item.link);
  }
  return false;
};

const baseClasses =
  "block py-2 px-6  my-1 transition-colors border-l text-slate-500";
---

{
  isCurrentPage(item) ? (
    <li
      class={baseClasses + " border-slate-500 bg-main-blue-20 text-slate-900"}
    >
      {item.text}
    </li>
  ) : (
    <a href={item.link}>
      <li
        class={
          baseClasses +
          " hover:border-slate-400 hover:bg-main-blue-05 hover:text-slate-900"
        }
      >
        {item.text}
      </li>
    </a>
  )
}
